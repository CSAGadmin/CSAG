<?xml version="1.0" encoding="utf-8" ?>
<odoo>

    <!-- Custom 403 error site -->
    <!--<template id="403_error_gab" inherit_id="website.403" name="403 Error GAB">-->
    <template id="403_error_gab" inherit_id="http_routing.403" name="403 Error GAB">

        <!-- Add element -->
        <xpath expr="//div[hasclass('container')]" position="replace">
            <div class="container">
                <div class="row error_container">
                    <div class="col-md-6 oe_structure">
                        <img src="/theme_gab/static/src/img/403-error.png" class="img img-fluid"/>
                    </div>
                    <div class="col-md-6 oe_structure error_message">
                        <h1>403: Forbidden</h1>
                        <p>The page you were looking for could not be authorized.</p>
                        <!--
                        <p>Maybe you were looking for one of these popular pages?</p>
                        <ul>
                            <li><a href="/">Homepage</a></li>
                            <li><a href="/contactus">Contact Us</a></li>
                        </ul>
                        -->
                    </div>
                </div>
            </div>
        </xpath>

    </template>

</odoo>